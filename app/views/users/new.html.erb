  <div class="row justify-content-md-center">
    <div class="col-4">
      <div class="card mt-5">
        <div class="card-header text-center">
          註冊
        </div>
        <div class="card-body">
          <%= simple_form_for @user do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email,label: t('views.user.email'), required: true, autofocus: true %>
              <%= f.input :name,label: t('views.user.name'), required: true, autofocus: true %>
              <%= f.input :password,label: t('views.user.password'), required: true%>
              <%= f.input :password_confirmation,label: t('views.user.password_confirmation'), required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t("views.user.sing_up"), class:'btn btn-primary form-control' %>
            </div>
          <% end %>

        </div>
        <div class="card-footer text-muted">
        </div>
      </div>
    </div>
  </div>


