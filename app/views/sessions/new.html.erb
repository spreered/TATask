
<div class="row justify-content-md-center">
  <div class="col-4">
    <div class="card mt-5">
      <div class="card-header text-center">
        登入
      </div>
      <div class="card-body">
        <%= simple_form_for(:session, url: login_path) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,label: t('views.user.email'), required: true, autofocus: true %>
            <%= f.input :password,label: t('views.user.password'), required: true%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, t('views.user.login') ,class:'btn btn-primary form-control'%>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <%= t('views.user.new_user_ask')%> <%= link_to t('views.user.sing_up'), new_user_path %>
      </div>
    </div>
  </div>
</div>






